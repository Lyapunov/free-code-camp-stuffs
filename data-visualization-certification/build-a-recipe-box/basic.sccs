html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: white
   display: block

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh

.fixed-big-font
   font-size: 40px
   font-family: "Verdana"
   overflow-wrap: break-word
   white-space: nowrap

//.list-group
//   padding: 0px 0px
//   margin : 0px 0px

%bordered-table
   border-style: solid
   border-width: 1px
   border-color: black

.recipebox-body
   display: block
   list-style-type: disc
   margin-top: 1em
   margin-bottom: 1em
   margin-left: 0
   margin-right: 0
   padding-left: 0

#recipebox-container
   width: 100vw
   display: table

.recipebox-table
   @extend %bordered-table
   display: block
   position: absolute
   left: 10vw
   margin: 0
   padding: 0
   vertical-align: middle

.recipebox-headline
   @extend .noselect
   font-weight: bold
   cursor: pointer

.recipebox-cell
   @extend %bordered-table
   @extend .noselect
   width: 20vw
   height: 40px
   text-align: center

// https://stackoverflow.com/questions/3331353/transitions-on-the-display-property

.recipebox-ingredient-off
   transition: height 1.0s ease
   height: 0
   margin: 0
   padding: 0
   overflow: hidden

.recipebox-ingredient-on
   transition: height 1.0s ease
   height: 30
   margin: 0
   padding: 0
   overflow: hidden
