html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: white
   display: block

button
   border: 0
   background: none
   background-repeat: no-repeat
   box-shadow: none
   border-radius: 0px
   -webkit-appearance: none
   color: none
   text-decoration: underline

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh

.fixed-big-font
   font-size: 40px
   font-family: "Verdana"
   overflow-wrap: break-word
   white-space: nowrap

.recipebox-img
   width : 32px
   height: 32px

%bordered-table
   border-style: solid
   border-width: 1px
   border-color: black

.recipebox-loading
   @extend %bordered-table
   width: 80vw
   height: 40px
   text-align: center
   background-color: white

#recipebox-container
   width: 100vw
   display: table

.recipebox-table
   @extend %bordered-table
   display: block
   position: absolute
   left: 10vw
   margin: 0
   padding: 0
   vertical-align: middle

.recipebox-headline
   @extend .noselect
   font-weight: bold

.recipebox-row-1
   @extend %bordered-table
   background-color: white

.recipebox-row-2
   @extend %bordered-table
   background-color: lightgray

.recipebox-cell
   @extend %bordered-table
   @extend .noselect
   width: 20vw
   height: 40px
   text-align: center

.recipebox-cell-half-invisible
   @extend %bordered-table
   width: 10vw
   text-align: center

.recipebox-cell-half
   @extend %bordered-table
   @extend .noselect
   width: 10vw
   text-align: center

.recipebox-horizontal-bar
   width: 100%
   height: 60px
   text-align: center
   vertical-align: middle

