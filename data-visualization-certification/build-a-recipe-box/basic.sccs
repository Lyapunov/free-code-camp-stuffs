html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: white
   display: block

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh

.fixed-big-font
   font-size: 40px
   font-family: "Verdana"
   overflow-wrap: break-word
   white-space: nowrap

%bordered-table
   border-style: solid
   border-width: 1px
   border-color: black

#recipebox-container
   width: 100vw
   display: table

.recipebox-table
   @extend %bordered-table
   display: block
   position: absolute
   left: 10vw
   margin: 0
   padding: 0
   vertical-align: middle

.recipebox-headline
   @extend .noselect
   font-weight: bold
   cursor: pointer

.recipebox-cell
   @extend %bordered-table
   @extend .noselect
   width: 20vw
   height: 40px
   text-align: center

