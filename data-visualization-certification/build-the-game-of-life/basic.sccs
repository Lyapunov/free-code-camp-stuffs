html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: #004000

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

// Gem of centering: https://stackoverflow.com/questions/7455362/how-to-center-a-table-of-the-screen-vertically-and-horizontally

.game-of-life-bar
   width: 100vw
   height: 10vh
   display: table-cell
   vertical-align: middle

.game-of-life-outer
   width: 100vw

.game-of-life-table
   display: table
   margin-left: auto
   margin-right: auto

.game-of-life-upperbuttons
   display: table
   margin-left: auto
   margin-right: auto

.game-of-life-upper-button
   max-height: 6vh
   font-size: 3vh
   margin-left: 5px
   margin-right: 5px

%game-of-life-cell
   display: table-cell
   width: 2vmin
   height: 2vmin

.game-of-life-cell-full
   @extend %game-of-life-cell
   background-color: #00FF00

.game-of-life-cell-half
   @extend %game-of-life-cell
   background-color: #008000

.game-of-life-cell-none
   @extend %game-of-life-cell
   background-color: #000000
