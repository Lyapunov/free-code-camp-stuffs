html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: #000000
   padding: 0px
   margin: 0px

button
   border: 1
   background-repeat: no-repeat
   box-shadow: none
   border-radius: 1px
   -webkit-appearance: none
   color: white

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   -o-user-select: none

.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

// Gem of centering: https://stackoverflow.com/questions/7455362/how-to-center-a-table-of-the-screen-vertically-and-horizontally

.diabolito-main
   width: 100vw
   display: table
   background-color: #ffff00

.diabolito-canvas
   width: 100vw
   height: 70vh
   background-color: #000000

.diabolito-bar
   width: 100vw
   height: 30vh
   background-color: #f3e3c2

.diabolito-control-panel
   width: 100vmin
   height: 100%
   background-color: #ff00ff
   margin-left: auto
   margin-right: auto

.diabolito-character-belt
   display: flex

.diabolito-character-text
   display: flex

.diabolito-character-status
   padding: 0px
   margin: 0px
   border-collapse: separate
   border-spacing: 0

.diabolito-control-row
   display: block
   background-color: #888888
   padding: 0px
   margin: 0px

.diabolito-control-box
   @extend .noselect
   font-family: Arial
   font-size: 2vmin
   padding: 0px
   margin: 0px

.diabolito-belt-button
   width: 12vmin
   height: 5vh

.diabolito-messenger
   @extend .noselect
   width: 90vmin
   height: 15vh
   font-size: 2vmin
   resize: none
