html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: #000000
   padding: 0px
   margin: 0px

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

// Gem of centering: https://stackoverflow.com/questions/7455362/how-to-center-a-table-of-the-screen-vertically-and-horizontally

.diabolito-main
   width: 100vw
   display: table
   background-color: #ffff00

.diabolito-canvas
   width: 100vw
   height: 70vh
   background-color: #000000

.diabolito-bar
   width: 100vw
   height: 30vh
   background-color: #f3e3c2

.diabolito-control-panel
   width: 100vmin
   height: 100%
   background-color: #ff00ff
   margin-left: auto
   margin-right: auto
