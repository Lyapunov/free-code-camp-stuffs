$dark-metal-color: #23415a
$light-metal-color: #4682B4
$black-color: #000000
$white-color: #ffffff

html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   overflow-y: hidden
   background-color: $black-color
   padding: 0px
   margin: 0px

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   -o-user-select: none

.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

// Gem of centering: https://stackoverflow.com/questions/7455362/how-to-center-a-table-of-the-screen-vertically-and-horizontally

.diabolito-main
   width: 100vw
   display: table

.diabolito-canvas
   width: 100vw
   height: 70vh
   background-color: $black-color

.diabolito-bar
   width: 100vw
   height: 30vh
   background-color: $light-metal-color

.diabolito-control-panel
   width: 100vmin
   height: 100%
   background-color: $dark-metal-color
   margin-left: auto
   margin-right: auto

.diabolito-character-belt
   display: flex
   margin-left: auto
   margin-right: auto

.diabolito-character-text
   display: flex
   width: 100vmin

.diabolito-character-status
   padding: 0px
   margin: 0px
   border-collapse: separate
   border-spacing: 0

.diabolito-control-row
   display: flex
   padding: 0px
   margin: 0px

.diabolito-control-half-spacer
   @extend .noselect
   height: 1vmin

.diabolito-control-mini-spacer
   width: 2vmin
   display: inline-block
   padding: 0px
   margin: 0px

.diabolito-control-box
   @extend .noselect
   font-family: monospace 
   font-size: 2vmin
   padding: 0px
   margin: 0px
   width: 32vmin
   display: inline-block
   color: $white-color

.diabolito-belt-button
   width: 12vmin
   height: 5vh
   border: 1
   background-repeat: no-repeat
   box-shadow: none
   border-radius: 0px
   -webkit-appearance: none
   color: white
   border: 1px solid $dark-metal-color
   background-color: $light-metal-color
   cursor: pointer
   overflow-x: hidden
   overflow-y: hidden
   font-size: 3vmin
   padding: 0px
   margin: 0px

.noborder
   border-radius: 0px
   box-shadow: none
   -webkit-box-shadow: none
   -moz-box-shadow: none
   outline: none
   border: none

.diabolito-messenger
   @extend .noselect
   @extend .noborder
   width: 90vmin
   height: 15vh
   font-size: 2vmin
   resize: none
   cursor: default
   color: transparent
   text-shadow: 0 0 0 black
   margin-left: auto
   margin-right: auto
   background-color: $light-metal-color

.diabolito-messenger.focus
   outline: none
