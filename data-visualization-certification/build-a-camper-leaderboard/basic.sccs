html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden
   background-color: yellow
   display: block

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

.fixed-big-font
   font-size: 40px
   overflow-wrap: break-word
   white-space: nowrap

.leaderboard-img
   width : 32px
   height: 32px

%bordered-table
   border-style: solid
   border-width: 1px
   border-color: black

.leaderboard-loading
   @extend %bordered-table
   width: 80vw
   height: 40px
   text-align: center

#leaderboard-container
   width: 100vw
   display: table

.leaderboard-table
   @extend %bordered-table
   display: block
   position: absolute
   left: 10vw
   margin: 0
   padding: 0
   vertical-align: middle

.leaderboard-headline
   @extend .noselect
   font-weight: bold

.leaderboard-row-1
   @extend %bordered-table
   background-color: white

.leaderboard-row-2
   @extend %bordered-table
   background-color: lightgray

.leaderboard-cell
   @extend %bordered-table
   @extend .noselect
   width: 20vw
   height: 40px
   text-align: center

.leaderboard-cell-half-invisible
   @extend %bordered-table
   width: 10vw
   text-align: center

.leaderboard-cell-half
   @extend %bordered-table
   @extend .noselect
   width: 10vw
   text-align: center

.leaderboard-horizontal-bar
   width: 100%
   height: 70px
   text-align: center
   vertical-align: middle

