html, body,
   max-width : 100%
   height    : 100%
   overflow-x: hidden

.noselect
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
                             
.big-font
   font-size: 8vh

.medium-font
   font-size: 5vh
   text-decoration: underline

.leaderboard-img
   width : 30px
   height: 30px

%bordered-table
   border-style: solid
   border-width: 1px
   border-color: black

.leaderboard-table
   @extend %bordered-table

.leaderboard-row
   @extend %bordered-table

.leaderboard-cell
   @extend %bordered-table
   width: 20vw
   text-align: center

.leaderboard-cell-half
   @extend %bordered-table
   width: 10vw
   text-align: center

.previewer-horizontal-bar
   width: 100%
   height: 15%
   text-align: center
   vertical-align: middle

.previewer-vertical-panel
   width  : 50vw
   display: block
   padding: 15px

.previewer-block
   display     : block
   width       : 100%
   height      : 80%
   border-style: solid
   border-width: 1px
   border-color: black
   overflow-y  : auto

.previewer-markdown-editor
   display: flex
   height: 75vh

